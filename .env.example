
# Overseerr Configuration
OVERSEERR_URL=http://localhost:5055
OVERSEERR_API_KEY=your_api_key_here

# Signal Configuration
SIGNAL_CLI_PATH=/usr/local/bin/signal-cli
SIGNAL_PHONE_NUMBER=+1234567890
SIGNAL_CLI_CONFIG_DIR=/home/signal/.local/share/signal-cli

# Database Configuration
DATABASE_URL=sqlite:///signalerr.db

# Web UI Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=false

# Admin Configuration
ADMIN_PHONE_NUMBERS=+1234567890,+0987654321

# Bot Configuration
REQUEST_TIMEOUT_MINUTES=2
MAX_REQUESTS_PER_USER_PER_DAY=10
DEFAULT_VERBOSITY=simple
ENABLE_GROUP_CHATS=true
ENABLE_AUTO_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/signalerr.log
